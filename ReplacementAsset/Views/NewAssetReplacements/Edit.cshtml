@model ReplacementAsset.Models.NewAssetReplacement

<h4>Edit New Asset Replacement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NewType" class="control-label"></label>
                <input asp-for="NewType" class="form-control" />
                <span asp-validation-for="NewType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewSerialNumber" class="control-label"></label>
                <input asp-for="NewSerialNumber" class="form-control" />
                <span asp-validation-for="NewSerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReplace" class="control-label"></label>
                <input asp-for="DateReplace" class="form-control" />
                <span asp-validation-for="DateReplace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>